<UserControl x:Class="LastBell.Views.Pages.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:components="clr-namespace:MainComponents.Components;assembly=MainComponents"
             xmlns:pages="clr-namespace:LastBell.ViewModels.Pages"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance pages:StartPageViewModel}"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid
        >
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/MainBackground.png"/>
        </Grid.Background>
        <Grid
            Margin="64">
            <ContentPresenter ContentTemplate="{StaticResource LogoIcon}"
                          Width="424"
                          VerticalAlignment="top"
                          HorizontalAlignment="Left"/>
            <TextBlock Style="{StaticResource EuropeExtText}"
                   Margin="456 5 0 0 "
                   VerticalAlignment="top"
                   HorizontalAlignment="Left"
                   FontSize="80"
                   FontWeight="Bold"
                   Text="ВЫБЕРИ ИГРУ"
                   Foreground="{StaticResource WhiteBrush}"
                   />
        </Grid>
        <Grid
            VerticalAlignment="top"
            HorizontalAlignment="Left"
            Margin="64 200 0 0">
            <Border
                Margin="0 20 0 0"
                Background="#01496B"
                Opacity="0.4"
                Width="880"
                Height="816"
                CornerRadius="80">
                <Border.Effect>
                    <BlurEffect Radius="10" />
                </Border.Effect>
                <Border.CacheMode>
                    <BitmapCache />
                </Border.CacheMode>
            </Border>
            <components:RoundedButton
                Width="880"
                Height="816"
                CornerRadius="80"
                Command="{Binding GoMainViewCommand}">
                <components:RoundedButton.Background>
                    <ImageBrush ImageSource="/Resources/Images/QuizBtn.png"></ImageBrush>
                </components:RoundedButton.Background>
            </components:RoundedButton>
            <Rectangle
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Fill="#F53625"
                Width="364"
                Height="100"
                Margin="0,518,0,0"></Rectangle>
            <TextBlock Style="{StaticResource EuropeExtText}"
                       Margin="296 524 0 0 "
                       VerticalAlignment="top"
                       HorizontalAlignment="Left"
                       FontSize="80"
                       FontWeight="Bold"
                       Text="КВИЗ"
                       Foreground="{StaticResource WhiteBrush}"
            />
        </Grid>

        <Grid
            VerticalAlignment="top"
            HorizontalAlignment="Left"
            Margin="976 200 0 0">
            <Border
                Margin="0 20 0 0"
                Background="#01496B"
                Opacity="0.4"
                Width="880"
                Height="816"
                CornerRadius="80">
                <Border.Effect>
                    <BlurEffect Radius="10" />
                </Border.Effect>
                <Border.CacheMode>
                    <BitmapCache />
                </Border.CacheMode>
            </Border>
            <components:RoundedButton
                Width="880"
                Height="816"
                CornerRadius="80">
                <components:RoundedButton.Background>
                    <ImageBrush ImageSource="/Resources/Images/PuzzlesBtn.png"></ImageBrush>
                </components:RoundedButton.Background>
            </components:RoundedButton>

            <Rectangle
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Fill="#F53625"
                Width="391"
                Height="100"
                Margin="0,518,0,0"></Rectangle>
            <TextBlock Style="{StaticResource EuropeExtText}"
                       Margin="253 524 0 0 "
                       VerticalAlignment="top"
                       HorizontalAlignment="Left"
                       FontSize="80"
                       FontWeight="Bold"
                       Text="ПАЗЛЫ"
                       Foreground="{StaticResource WhiteBrush}"
            />
        </Grid>
    </Grid>
</UserControl>
