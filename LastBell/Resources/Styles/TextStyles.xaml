<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="TTNorms" >pack://application,,,/Resources/Fonts/#TT Norms</FontFamily>
    <FontFamily x:Key="EuropeExt" >pack://application,,,/Resources/Fonts/#EuropeExt</FontFamily>
    <Style TargetType="TextBlock" x:Key="BaseTextStyle">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}" x:Key="TTNormsText">
        <Setter Property="FontFamily" Value="{StaticResource TTNorms}"/>
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}" x:Key="EuropeExtText">
        <Setter Property="FontFamily" Value="{StaticResource EuropeExt}"/>
    </Style>
</ResourceDictionary>