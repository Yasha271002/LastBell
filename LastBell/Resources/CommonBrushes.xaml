<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Здесь цвета даны для примера, замените на те, которые есть в макете-->
    <Color x:Key="BlackColor">#292929</Color>
    <Color x:Key="YellowColor">#FFBE02</Color>
    <Color x:Key="OrangeColor">#FE6A02</Color>
    <Color x:Key="AlmostWhite">#ECF5EF</Color>
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="BlueColor">#26AFF0</Color>
    <Color x:Key="BlueWhiteColor">#A8E2FF</Color>
    <Color x:Key="AccentBlueColor">#0095DB</Color>

    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource BlackColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource YellowColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource OrangeColor}"/>
    <SolidColorBrush x:Key="ThirdBrush" Color="{StaticResource AlmostWhite}"/>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource BlueColor}"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>

    <LinearGradientBrush x:Key="BackgroundGradientBrush" StartPoint="0 0" EndPoint="0 1">
        <GradientStop Color="{StaticResource BlueWhiteColor}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentBlueColor}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>